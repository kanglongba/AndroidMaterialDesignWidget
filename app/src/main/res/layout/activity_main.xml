<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.bupt.edison.androidmaterialdesignwidget.MainActivity">

    <Button
        android:id="@+id/MD_NavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Navigation View"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/google_navigationview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Google Navigation View"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/md_textinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TextInputEdit"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/md_floatactionbuttion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="floating action button and snackbar"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/md_tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="tabLyout and viewPager"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/md_CoordinatorLayoutAndFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="CoordinatorLayout with FAB"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/md_CoordinatorLayoutAndAppBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="CoordinatorLayout with AppBar"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/md_CollapsingToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="CollapsingToolbar"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>


</LinearLayout>
